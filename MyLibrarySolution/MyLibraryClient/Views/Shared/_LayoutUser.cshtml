<!DOCTYPE html>

<html ng-app="userapp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>User</title>
    <script type="application/x-javascript">

        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); }
    </script>
    <link href="~/CSS/bootstrap.min.css" rel="stylesheet" />
    <link href="~/CSS/style.css" rel="stylesheet" />
    <link href="~/CSS/font-awesome.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Raleway:100' rel='stylesheet' type='text/css'>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)
</head>
<body ng-controller="userCtrl">
  
   

    <div class="navbar navbar-default navbar-fixed-top" style="background-color:rgb(9, 32, 79)">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse"
                        data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="">Member</a></li>
                    <li><a href="http://localhost:20577/#home">Home</a></li>


                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li ng-show="auth.authenticated"><a><span class="glyphicon glyphicon-user"></span>{{auth.username}} </a></li>
                    <li ng-show="auth.authenticated"><a href="" ng-click="signout()"><span class="glyphicon glyphicon-log-out"></span> Log Out</a></li>
                    <li ng-show="!auth.authenticated"><a href="#/signup"><span class="glyphicon glyphicon-log-in"></span> Registration </a></li>
                    <li ng-show="!auth.authenticated"><a href="#/login" ng-click="showLoginForm()"><span class="glyphicon glyphicon-log-in"></span> Log In</a></li>
                </ul>
            </div>
        </div>
    </div>


    <div style="margin-left:270px;width:700px">
        <div class="row">
            @RenderBody()
        </div>

    </div>
 
    <footer>
        <p style="margin-left: 250px">&copy; @DateTime.Now.Year - Developed By RPS </p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

</body>
</html>
